<%= form_with(model: [@course,exam], local: true) do |form| %>
  <% if exam.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(exam.errors.count, "error") %> prohibited this exam from being saved:</h2>

      <ul>
      <% exam.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :date, "Fecha" %>
    <%= form.date_select :date, id: :exam_date, required:true %>
  </div>

  <div class="field">
    <%= form.label :title, "Titulo" %>
    <%= form.text_field :title, id: :exam_title, placeholder:"Ingrese un titulo", required:true %>
  </div>

  <div class="field">
    <%= form.label :min_grade, "Nota minima de aprobacion" %>
    <%= form.number_field :min_grade, id: :exam_min_grade, min:"0", max:"10", required:true %>
  </div>

  <!-- <div class="field">
    <%= form.label :course_id %>
    <%= form.text_field :course_id, id: :exam_course_id %>
  </div> -->

  <div class="actions">
    <%= form.submit "Guardar examen" %>
  </div>
<% end %>
