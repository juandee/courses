<p id="notice"><%= notice %></p>

<h1>Exams</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Title</th>
      <th>Min grade</th>
      <th>Course</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @exams.each do |exam| %>
      <tr>
        <td><%= exam.date %></td>
        <td><%= exam.title %></td>
        <td><%= exam.min_grade %></td>
        <td><%= exam.course.title %></td>
        <td><%= link_to 'Show', course_exam_path(@course,exam) %></td>
        <td><%= link_to 'Edit', edit_course_exam_path(@course,exam) %></td>
        <td><%= link_to 'Destroy', course_exam_path(@course,exam), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

